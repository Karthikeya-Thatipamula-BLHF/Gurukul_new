# Gurukul Frontend Environment Variables
# Copy this file to .env.local for local development
# For production, set these in Vercel dashboard

# Backend API URLs (Update with your deployment URLs or compose)
VITE_API_BASE_URL=https://your-backend.example.com
VITE_CHAT_API_BASE_URL=https://your-chat.example.com
VITE_FINANCIAL_API_BASE_URL=https://your-financial.example.com
VITE_AGENT_API_BASE_URL=https://your-agent.example.com
VITE_UNIGURU_API_BASE_URL=https://your-uniguru.example.com

# Application Configuration
VITE_APP_NAME=Gurukul Learning Platform
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_TTS=true
VITE_ENABLE_FINANCIAL_SIMULATOR=true
VITE_ENABLE_MEMORY_MANAGEMENT=true

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_HOTJAR_ID=
